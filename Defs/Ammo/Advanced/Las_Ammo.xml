<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ==================== Las weapons ========================== -->

	<CombatExtended.AmmoCategoryDef>
		<defName>OGLasAC</defName>
		<label>Las Charge</label>
		<description>Focuses a throbbing bass note into an explosive sonic crescendo that can burst eyeballs and rupture internal organs. By varying the frequency of the blast, the effect of the weapon can be altered to produce different effects.</description>
	</CombatExtended.AmmoCategoryDef>

	<ThingCategoryDef>
		<defName>AmmoOGLas</defName>
		<label>Las charges</label>
		<parent>AmmoAdvanced</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_OGLasStd</defName>
		<label>Las charge (Imperial)</label>
		<ammoTypes>
			<OGI_Ammo_LasGun>OGI_Bullet_LasGun</OGI_Ammo_LasGun>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

        <!-- ==================== Bullet ========================== -->

        <ThingDef Class="OgsLasers.LaserBeamDefCE" ParentName="BaseBullet">
	  <defName>OGI_Bullet_LasGun</defName>
	  <label>las blast</label>
	  <description>A focused pinpoint laser beam which is strong enough to take an ordinary human arm off with one shot but is not as effective against the more durable alien bodies and stronger types of personal armour.</description>
	  <textures>
	    <li>Things/Mote/LongSparkThrown</li>
	  </textures>
	  <seam>0</seam>
	  <projectile Class="CombatExtended.ProjectilePropertiesCE">
	    <damageDef>Bullet</damageDef>
	    <damageAmountBase>10</damageAmountBase>
	    <armorPenetrationSharp>12</armorPenetrationSharp>
	    <armorPenetrationBlunt>28</armorPenetrationBlunt>
	  </projectile>
	  <modExtensions>
	    <li Class="ProjectileImpactFX.EffectProjectileExtension">
	      <explosionMote>true</explosionMote>
	      <explosionMoteSize>0.25</explosionMoteSize>
	      <ImpactMoteDef>Mote_YellowSparkFlash</ImpactMoteDef>
	      <ImpactMoteSize>1</ImpactMoteSize>
	      <ImpactGlowMoteDef>Mote_ExplosionFlash</ImpactGlowMoteDef>
	      <ImpactGlowMoteSize>2.5</ImpactGlowMoteSize>
	    </li>
	  </modExtensions>
	</ThingDef>


